{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleDetection": "auto",
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
}
